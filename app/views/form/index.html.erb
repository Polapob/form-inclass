<h1>Form#index</h1>
<p>Find me in app/views/form/index.html.erb</p>

<%= form_with url: "/score/index", method: :get do |form| %>
<div class = "formContainer">
<div>
 <%= form.label :subject1, "Subject1:" %>
  <%= form.text_field :subject1 %>
  <%= form.label :mark1,"mark1:" %>
  <%= form.text_field :mark1 %>
</div>
<div>
 <%= form.label :subject2, "Subject2:" %>
  <%= form.text_field :subject2 %>
  <%= form.label :mark2,"mark2:" %>
  <%= form.text_field :mark2 %>
</div>

<div>
 <%= form.label :subject3, "Subject3:" %>
  <%= form.text_field :subject3 %>
  <%= form.label :mark3,"mark3:" %>
  <%= form.text_field :mark3 %>
</div>

<button class = "submitButton" Type="submit">
    Submit
</button>
  
</div>

<% end %>

<style>
    .formContainer{
       display:flex;
       justify-content:start;
       flex-direction:column;
       align-items:center;
       row-gap:2rem;
    }
    .submitButton{
        width:100px;
        font-size:18px;
        padding:0.5rem 0rem;
        font-weight:bold;
        text-align:center
    }
</style>